<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wei.mark.pingpongboss"
    android:versionCode="6"
    android:versionName="1.6" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" >
    </uses-sdk>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".Pingpongboss"
        android:theme="@style/Theme.DarkWithOrangeHighlights" android:hardwareAccelerated="true">
        <activity
            android:label="@string/app_name"
            android:name=".activity.DualPlayerListActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.PlayerDetailsActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activity.MainViewPagerActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelectFacebookProfileActivity" android:label="@string/app_name"></activity>
    </application>

</manifest>