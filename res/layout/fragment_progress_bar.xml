<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="#000000">
	<include layout="@layout/action_bar" android:layout_height="25dp" android:id="@+id/action_bar" android:layout_width="wrap_content"></include>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:gravity="center" android:padding="5dp">
		<ProgressBar android:id="@+id/progress"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="center"></ProgressBar>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/message"></TextView>
	</LinearLayout>
</LinearLayout>
