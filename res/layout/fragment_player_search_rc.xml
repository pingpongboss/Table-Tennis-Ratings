<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/RootLayout" android:orientation="vertical">
	<include layout="@layout/action_bar" android:id="@+id/action_bar"
		android:layout_height="wrap_content" android:layout_width="wrap_content"></include>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:id="@+id/searchLinearLayout">
		<EditText android:hint="Last, First" android:id="@+id/rcPlayerNameEditText" style="@style/EditText.Left.Search"></EditText>
		<ImageButton android:id="@+id/searchButton" style="@style/Button.Right.Search"></ImageButton>
	</LinearLayout>
	<ListView android:id="@id/android:list" style="@style/TransparentListView"></ListView>
	<TextView android:id="@id/android:empty" android:text="No History"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:gravity="center"></TextView>
</LinearLayout>
