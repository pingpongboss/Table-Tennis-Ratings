<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/RootLayout" android:orientation="vertical">
	<include layout="@layout/action_bar" android:id="@+id/action_bar"
		android:layout_height="wrap_content" android:layout_width="fill_parent"></include>
	<ListView style="@style/ListView" android:id="@id/android:list"></ListView>
	<FrameLayout style="@style/EmptyListLayout">
	<LinearLayout android:orientation="vertical" style="@style/EmptyListIndicator">
		<ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progress"></ProgressBar>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/emptyListText"
			style="@style/EmptyListIndicator" android:text="Searching..."></TextView>
		<Button android:layout_width="wrap_content" android:visibility="gone" android:layout_height="wrap_content" android:text="Retry" style="@style/Button" android:id="@+id/retry"></Button>
	</LinearLayout>
	</FrameLayout>
</LinearLayout>
