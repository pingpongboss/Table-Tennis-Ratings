<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
	</style>
	<style name="Theme.DarkWithOrangeHighlights" parent="android:Theme.NoTitleBar">
		<item name="android:textColor">@color/primary_text</item>
	</style>
	<style name="EditText">
		<item name="android:background">@drawable/white_selector</item>
		<item name="android:textColor">@color/secondary_text</item>
		<item name="android:textColorHint">@color/primary_text</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="Button">
		<item name="android:background">@drawable/white_selector</item>
		<item name="android:textColor">@color/secondary_text</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="EditText.Left">
		<item name="android:background">@drawable/white_left_selector</item>
	</style>
	<style name="Button.Right">
		<item name="android:background">@drawable/white_right_selector</item>
	</style>
	<style name="EditText.Left.Search">
		<item name="android:imeOptions">actionSearch</item>
		<item name="android:inputType">textCapWords</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>
	<style name="Button.Right.Search">
		<item name="android:src">@drawable/search</item>
		<item name="android:scaleType">center</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="RootLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">2dp</item>
		<item name="android:background">@color/background_dark_gray</item>
	</style>
	<style name="RootLayout.Search">
		<item name="android:name">wei.mark.tabletennis.FragmentPlayerSearch</item>
	</style>
	<style name="RootLayout.Search.Landscape">
		<item name="android:layout_width">150dp</item>
	</style>
	<style name="RootLayout.List">
		<item name="android:name">wei.mark.tabletennis.FragmentPlayerList</item>
	</style>
	<style name="RootLayout.List.Landscape">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="ActionBar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@color/background_dark_gray</item>
	</style>
	<style name="ActionBarItem">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="ActionBarItem.Logo">
		<item name="android:background">@drawable/logo_selector</item>
	</style>
	<style name="ActionBarItem.ProviderLogoLayout">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="ActionBarItem.ProviderLogo">
		<item name="android:layout_gravity">center</item>
		<item name="android:background">@color/background_dark_gray</item>
	</style>
	<style name="ActionBarItem.Text">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">18sp</item>
		<item name="android:visibility">gone</item>
	</style>
	<style name="ListView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">0px</item>
		<item name="android:layout_weight">1</item>
		<item name="android:cacheColorHint">@color/background_dark_gray</item>
		<item name="android:fastScrollEnabled">true</item>
	</style>
	<style name="ListViewItem">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="EmptyListLayout">
		<item name="android:id">@android:id/empty</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	<style name="EmptyListIndicator">
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="HorizontalSpacer">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="VerticalSpacer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="ToastLayout">
		<item name="android:background">@drawable/toast_frame</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="ToastImage">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="ToastText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/secondary_text</item>
	</style>
</resources>
